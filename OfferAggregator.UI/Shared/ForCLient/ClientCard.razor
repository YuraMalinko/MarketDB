@inject NavigationManager _navigationManager

<div class="client_card">
    <div>
        <h4>
            <b>ID:</b> @client.Id <br />
            <b>Имя:</b> @client.Name <br />
            <b>Телефон:</b> @client.PhoneNumber <br />
        </h4>
    </div>
    <div class="d-grid gap-2">
        <a class="btn btn-outline-info" href="/clients/@client.Id" role="button">Информация</a>
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="@_goToModal"> Удалить </button>
        
        <ModalWindowDELETE Id="client.Id" IdModal="@_idModal">
        </ModalWindowDELETE>
        
    </div>
</div>

@code {
    [Parameter] public ClientOutputModel client { get; set; }
    [Parameter] public EventCallback<ClientInputModel> btnUpdate { get; set; }
    private string _idModal;
    private string _goToModal;
    ClientService _clientService = new ClientService();

    protected override void OnInitialized()
    {
        _idModal = "Modal" + client.Id;
        _goToModal = "#" + _idModal;
    }
}